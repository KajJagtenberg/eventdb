type Projection {
  id: ID!
  name: String!
  code: String!
  created_at: Time!
  updated_at: Time!
  checkpoint: String!
}

input CreateProjection {
  name: String!
  code: String!
}

extend type Query {
  projections(skip: Int! = 0, limit: Int! = 0): [Projection!]!
  projection(id: ID!): Projection
}

extend type Mutation {
  createProjection(input: CreateProjection): Projection!
}
