type Event {
  id: String!
  stream: String!
  version: Int!
  type: String!
  data: String!
  metadata: String!
  causation_id: String!
  correlation_id: String!
  added_at: Time!
}

extend type Query {
  streams(skip: Int! = 0, limit: Int! = 20): [String!]!
  get(stream: String!, version: Int! = 0, limit: Int! = 0): [Event!]!
  log(
    offset: String! = "00000000000000000000000000"
    limit: Int! = 10
  ): [Event!]!
  eventCount: Int!
}

scalar Time
